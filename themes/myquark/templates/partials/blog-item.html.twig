<div class="content-item h-entry">

{% if not hero_image_name %}
    <div class="content-title text-center">
        {% include 'partials/blog/title.html.twig' with {title_level: 'h1'} %}
        {% if page.header.subtitle %}
        <h2>{{ page.header.subtitle }}</h2>
        {% endif %}
        {{ page.summary|raw }}
        {% include 'partials/blog/date.html.twig' %}
        {% if page.header.updated %}
            {% include 'partials/blog/last-edited.html.twig' %}
        {% endif %}
        {% include 'partials/blog/taxonomy.html.twig' %}
    </div>
{% endif %}
    <div class="e-content">
        {% include 'partials/blog/announcement.html.twig' %}
        {{ page.content|slice(page.summary|length)|raw }}
        {% include 'partials/blog/call-to-action.html.twig' %}
        {% include 'partials/blog/references.html.twig' %}
    </div>

    {% if page.header.continue_link is same as(true) and config.plugins.comments.enabled %}
        {% include 'partials/comments.html.twig' %}
    {% endif %}
</div>

<p class="prev-next text-center">
    {% if not page.isLast %}
            <a class="btn" href="{{ page.prevSibling.url }}"><i class="fa fa-angle-left"></i> {{ 'THEME_QUARK.BLOG.ITEM.PREV_POST'|t }}</a>
    {% endif %}

    {% if not page.isFirst %}
        <a class="btn" href="{{ page.nextSibling.url }}">{{ 'THEME_QUARK.BLOG.ITEM.NEXT_POST'|t }} <i class="fa fa-angle-right"></i></a>
    {% endif %}
</p>

{% do assets.addJs('theme://js/share_scrollable_buttons.js', {group:'bottom'}) %}
{% do assets.addJs('theme://js/code_blocks_clipboard.js', {group:'bottom'}) %}
