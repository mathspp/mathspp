{% extends 'modular/hero.html.twig' %}

{% block %}
    <style>
    .hero-flex {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    }

    .hero-text {
    flex: 1 1 50%;
    min-width: 280px;
    }

    .hero-text h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    }

    .subheadline {
    font-size: 1.25rem;
    color: #666;
    margin-bottom: 1.5rem;
    }

    .cta-button {
    font-size: 1.1rem;
    padding: 0.75rem 1.5rem;
    }

    .cta-subtext {
    font-size: 0.9rem;
    color: #888;
    margin-top: 0.5rem;
    }

    .hero-image {
    flex: 1 1 40%;
    text-align: center;
    }

    .hero-image img {
    max-width: 100%;
    height: auto;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }
    </style>
{% endblock %}

{% block content %}
  <div class="container hero-flex">
    <div class="hero-text">
      {% if page.header.headline %}
        <h1>{{ page.header.headline }}</h1>
      {% endif %}

      {% if page.header.subheadline %}
        <p class="subheadline">{{ page.header.subheadline }}</p>
      {% endif %}

      {% if page.header.cta %}
        <a class="button cta-button" href="{{ page.header.cta.url }}">{{ page.header.cta.text }}</a>

        {% if page.header.cta.subtext %}
          <p class="cta-subtext">{{ page.header.cta.subtext }}</p>
        {% endif %}
      {% endif %}
    </div>

    {% if page.header.book_cover %}
      <div class="hero-image">
        <img src="{{ url('theme://images/' ~ page.header.book_cover) }}" alt="Book cover">
      </div>
    {% endif %}
  </div>
{% endblock %}
