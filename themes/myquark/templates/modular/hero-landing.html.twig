<style>
.hero-flex {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}

.hero-text {
  flex: 1 1 50%;
  min-width: 280px;
}

.hero-text h1 {
  font-size: 2.5rem;
  margin-bottom: 1rem;
  line-height: 1.2;
}

.hero-text .subheadline {
  font-size: 1.25rem;
  margin-bottom: 1.5rem;
}

.cta-button {
  font-size: 1.1rem;
  padding: 0.75rem 1.5rem;
  height: auto;
}

.cta-subtext {
  font-size: 0.9rem;
  margin-top: 0.5rem;
}

.hero-image {
  flex: 1 1 40%;
  text-align: center;
}

.hero-image img {
  max-width: 100%;
  height: auto;
}
</style>

<section class="section modular-hero modular-row hero-landing {{ page.header.class }}" style="background-image: url('/user/themes/myquark/images/common_hero.webp');">
  <div class="image-overlay"></div>
  <section class="container grid-xl hero-flex">
    <div class="hero-text">
      {% if page.header.headline %}
        <h1>{{ page.header.headline }}</h1>
      {% endif %}
      {% if page.header.subheadline %}
        <h2 class="subheadline">{{ page.header.subheadline }}</h2>
      {% endif %}
      {% if page.header.cta %}
        <a class="button cta-button" href="{{ page.header.cta.url }}">{{ page.header.cta.text }}</a>
        {% if page.header.cta.subtext %}
          <p class="cta-subtext">{{ page.header.cta.subtext }}</p>
        {% endif %}
      {% endif %}
    </div>

    {% if page.header.book_cover %}
      <div class="hero-image">
        <img src="{{ page.media[page.header.book_cover].url }}" alt="Book cover">
      </div>
    {% endif %}
  </section>

  <i id="to-start" class="pulse fa fa-angle-down"></i>
</section>
